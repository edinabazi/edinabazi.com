// Apply a natural box layout model to all elements

*,
*:before,
*:after
	box-sizing border-box
	

	
// Some helper classes

.hidden
	display none
	
.bold
	font-weight 700
	
.italic
	font-style italic
	


// Selection and tap highlight color
	
selection()
	::-moz-selection
		background-color color-secondary
		color color-black
	::selection
		background-color color-secondary
		color color-black
		
*
	-webkit-tap-highlight-color rgba(color-secondary, 0.4)


// No JS Alert
		
.no-js-alert
	width 100%
	background-color red
	color color-white
	text-align center
	position relative
	top 0
	left 0
	z-index 7000
	margin-top 8px
	padding (pad/2)
	
	a
		color color-white
		text-decoration underline

html
	&.no-js
			
		body.noscroll
			overflow visible
			
		main
			opacity 1
			visibility visible
			



// Define main containers

.container
	width container
	margin 0 auto
	
	+below(large)
		width 85%
		
	+below(medium)
		width 100%
		padding 0 (pad/2)
	
.small-container
	max-width smallContainer
	margin 0 auto
	
	+below(smallContainer)
		padding 0 (pad/2)