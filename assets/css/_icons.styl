[class^="icon-"], [class*=" icon-"]
	font-family 'social' !important
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale

.icon-twitter
	&:before
		content "\f099"

.icon-github
	&:before
		content "\f09b"

.icon-instagram
	&:before
		content "\f16d"

.icon-steam
	&:before
		content "\f1b6"

.icon-soundcloud
	&:before
		content "\f1be"